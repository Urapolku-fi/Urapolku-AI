// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid()) @map("_id")
  email     String    @unique
  answerIds String[]
  answers   Answers[] @relation(fields: [answerIds], references: [id])
}

model Answers {
  id            String @id @default(cuid()) @map("_id")
  hash          String @unique
  promptVersion Int
  answers       String
  results       String

  Users   User[]   @relation(fields: [userIds], references: [id])
  userIds String[]
}
